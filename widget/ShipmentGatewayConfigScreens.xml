                                <label style="h3">${uiLabelMap.${activeApp}ViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="EditShipmentBox">
        <section>
            <widgets>
                <decorator-screen name="CommonConfigurationDecorator" location="${parameters.mainDecoratorLocation}">
